QGroupBox {
    border: 1px solid #666;
    border-radius: 8px;
    margin-top: 20px;
    padding: 10px;
    background-color: #262626;
    color: #f2f2f2;
    font-weight: bold;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 6px;
    color: #ffffff;
    font-size: 12pt;
}

QCheckBox {
    spacing: 8px;
    color: #f0f0f0;
}

QPushButton:hover {
    background-color: #434343;
}